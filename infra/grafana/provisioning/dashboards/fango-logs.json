{
  "dashboard": {
    "id": null,
    "title": "Fango应用日志监控",
    "tags": ["fango", "logs"],
    "timezone": "Asia/Shanghai",
    "panels": [
      {
        "id": 1,
        "title": "日志级别分布",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "collection": "app_logs",
            "query": {
              "groupBy": {"field": "level"},
              "metrics": [{"field": "level", "operator": "count", "alias": "数量"}]
            }
          }
        ]
      },
      {
        "id": 2,
        "title": "错误日志趋势",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 24, "h": 8},
        "targets": [
          {
            "collection": "app_logs",
            "query": {
              "filter": {"level": "ERROR"},
              "groupBy": {"time": "1h", "field": "level"},
              "metrics": [{"field": "level", "operator": "count", "alias": "错误数量"}]
            }
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "refresh": "10s",
    "schemaVersion": 16,
    "version": 0,
    "links": []
  },
  "overwrite": true
}